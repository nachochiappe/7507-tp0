Object subclass: #ComisionCurricularPermanente	instanceVariableNames: 'coleccionExpedientes indice'	classVariableNames: ''	poolDictionaries: ''	category: '90340'!!ComisionCurricularPermanente methodsFor: 'processing' stamp: 'IgnacioChiappe 8/29/2018 16:41'!procesarExpediente	"procesa el expediente chequeando su estado de aprobación"		| expediente |	expediente := coleccionExpedientes at: indice.	expediente chequarAprobacion.	indice := indice + 1.	^expediente! !!ComisionCurricularPermanente methodsFor: 'initialization' stamp: 'IgnacioChiappe 8/29/2018 16:40'!initialize	"inicializacion de la CCP"		coleccionExpedientes := OrderedCollection new.	indice := 1.! !!ComisionCurricularPermanente methodsFor: 'accessing' stamp: 'IgnacioChiappe 8/29/2018 16:42'!votarAFavor	"toma el expediente indicado por el índice y le agrega un voto a favor"		| expediente |	expediente := coleccionExpedientes at: indice.	expediente votarAFavor.! !!ComisionCurricularPermanente methodsFor: 'accessing' stamp: 'IgnacioChiappe 8/29/2018 16:41'!recibirExpediente: unExpediente	"agrega un expediente a la colección de expedientes"		coleccionExpedientes add: unExpediente.! !!ComisionCurricularPermanente methodsFor: 'accessing' stamp: 'IgnacioChiappe 8/29/2018 16:42'!votarEnContra	"toma el expediente indicado por el índice y le agrega un voto en contra"		| expediente |	expediente := coleccionExpedientes at: indice.	expediente votarEnContra.! !Object subclass: #Expediente	instanceVariableNames: 'nombre estado votosAFavor votosEnContra'	classVariableNames: ''	poolDictionaries: ''	category: '90340'!!Expediente methodsFor: 'setting' stamp: 'IgnacioChiappe 8/29/2018 16:43'!establecerNombre: unNombre	"establece el nombre del expediente"		nombre := unNombre.! !!Expediente methodsFor: 'accessing' stamp: 'IgnacioChiappe 8/29/2018 16:44'!votosAFavor	"devuelve la cantidad de votos a favor que tiene el expediente"		^votosAFavor! !!Expediente methodsFor: 'accessing' stamp: 'IgnacioChiappe 8/29/2018 16:44'!votarEnContra	"le agrega un voto en contra al expediente"		votosEnContra := votosEnContra + 1.! !!Expediente methodsFor: 'accessing' stamp: 'IgnacioChiappe 8/29/2018 16:43'!votarAFavor	"le agrega un voto a favor al expediente"		votosAFavor := votosAFavor + 1.! !!Expediente methodsFor: 'accessing' stamp: 'IgnacioChiappe 8/29/2018 16:44'!votosEnContra	"devuelve la cantidad de votos en contra que tiene el expediente"		^votosEnContra! !!Expediente methodsFor: 'accessing' stamp: 'IgnacioChiappe 8/29/2018 16:43'!estado	"devuelve el estado de un expediente"		^estado.! !!Expediente methodsFor: 'accessing' stamp: 'IgnacioChiappe 8/29/2018 18:00'!chequarAprobacion	"chequea el estado de aprobación de un expediente"	estado := votosAFavor > votosEnContra		ifTrue: [ 'Aprobado' ]		ifFalse: [ 'Rechazado' ]! !!Expediente methodsFor: 'initialization' stamp: 'IgnacioChiappe 8/29/2018 16:43'!initialize	"inicializa un expediente"		estado := 'Iniciado'.	votosAFavor := 0.	votosEnContra := 0.! !